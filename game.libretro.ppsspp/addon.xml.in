<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.ppsspp"
		name="Sony - PlayStation Portable (PPSSPP)"
		version="0.0.1.20"
		provider-name="Henrik Hrydgard">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.psp" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>PSP</platforms>
		<extensions>elf|iso|cso|prx|pbp</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.ppsspp</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Sony - PlayStation Portable (PPSSPP)</summary>
		<description lang="da_DK">PPSSPP er en hurtig og bærbar PSP-emulator skrevet i C++.</description>
		<description lang="de_DE">PPSSPP ist ein schneller und portabler PSP-Emulator, geschrieben in C++.</description>
		<description lang="en_GB">PPSSPP is a fast and portable PSP emulator written in C++.</description>
		<description lang="es_ES">PPSSPP es un emulador de PSP rápido y portátil escrito en C++.</description>
		<description lang="zh_CN">PPSSPP 是用 C++ 编写的快速便携式 PSP 模拟器。</description>
		<disclaimer lang="da_DK">Oprindeligt skabt af Henrik Rydgård</disclaimer>
		<disclaimer lang="de_DE">Ursprünglich erstellt von Henrik Rydgård</disclaimer>
