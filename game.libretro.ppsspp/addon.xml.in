<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.ppsspp"
		name="PSP (PPSSPP)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.ps" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>PSP</platforms>
		<extensions>elf|iso|cso|prx|pbp</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">PSP (PPSSPP) v1.0.1-git</summary>
		<description>PPSSPP is a fast and portable PSP emulator written in C++.

Originally created by Henrik Rydg√•rd.

Supported files: .elf, .iso, .cso, .prx, .pbp</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
	</extension>
</addon>
